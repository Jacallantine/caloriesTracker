generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Map{
  mapId String @id @default(uuid())
  userId String 
  mapName String
  isActive Boolean
  isHp Boolean
  isSnd Boolean
  isControl Boolean
  isOverload Boolean @default(false)



 player PlayerInstance[]

}
model Team{ 
  teamId String @id @default(uuid()) 
  teamName String
  userId String @default("")

  player Player[]
  playerInstance PlayerInstance[]
  user User @relation(fields:[userId], references:[userId])
  
}
model Player{

  playerId String @id @default(uuid())
  playerName String
  userId String 
  teamId String 

  team Team @relation(fields:[teamId], references:[teamId])
  user User @relation(fields:[userId], references:[userId])
  playerInstance PlayerInstance[]
}

model PlayerInstance {
  playerInstanceId String @id
  mapId    String
  userId           String 
  teamId           String
  playerId         String
  kills            Int
  deaths           Int
  hillTime         Int
  plants           Int
  defuses          Int
  isAR             Boolean
  isSub            Boolean
  isFlex           Boolean
  controlTicks     Int
  isHp             Boolean @default(false)
  isSnd            Boolean @default(false)
  isOverload       Boolean @default(false)
  isControl        Boolean @default(false)
  gameMode         GameMode @default(DEFAULT)
  uploads          Int @default(0)



  team   Team?   @relation(fields: [teamId], references: [teamId])
  player Player? @relation(fields: [playerId], references: [playerId])
  map    Map?    @relation(fields: [mapId], references: [mapId])
  user   User?  @relation(fields: [userId], references: [userId])
}

enum GameMode{
  SND
  HP
  CONTROL
  OVERLOAD
  DEFAULT
}







model UserPermission{
  id String @id @default(uuid())
  userId String
  permission PermissionType
  createdAt DateTime @default(now())

  user User @relation(fields:[userId], references:[userId])


}

enum PermissionType{
  admin
  ai 
  default
}

model User {
  userId    String @id @default(uuid())
  firstName String
  lastName  String
  email     String @unique
  password String @default("test")


  session Session[]
  player Player[]
  team Team[]
  playerInstance PlayerInstance[]
  userPermission UserPermission[]


}



model Session {
  sessionId String @id
  userId String
  user User @relation(fields:[userId], references:[userId])
}




